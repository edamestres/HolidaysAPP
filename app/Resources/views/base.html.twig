<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('/css/bootstrap.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('/css/styles.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('/css/api_sky.css') }}">
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('/js/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('/js/app.js') }}"></script>
            <script type="text/javascript" src="{{ asset('/js/npm.js') }}"></script>
            <script type="text/javascript" src="{{ asset('/js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('/js/bootstrap.js') }}"></script>
        <script type="text/javascript" src="//api.skyscanner.net/api.ashx?key=01569c07-351b-4a42-ad1a-08e51044ec3d"></script>
        <script type="text/javascript">
           skyscanner.load("snippets","2");
           function main(){
               var snippet = new skyscanner.snippets.SearchPanelControl();
               snippet.setShape("box300x250");
               snippet.setCulture("fr-FR");
               snippet.setCurrency("EUR");
               snippet.setColourScheme("springgreenlight");
               snippet.setProduct("hotels","1");

               snippet.draw(document.getElementById("snippet_searchpanel"));
           }
           skyscanner.setOnLoadCallback(main);
        </script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid wrapper">
            {% block menu %}{% endblock %}
            {% block slider %}{% include 'slider/slider.html.twig' %}{% endblock %}
            {% block body %}{% endblock %}
            {% block fos_user_content %}{% endblock %} 
            {% block footer %}{% endblock %}
        </div>
    </body>
</html>
